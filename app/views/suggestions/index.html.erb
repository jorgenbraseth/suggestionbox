<header>
  <h1>Suggestion Box</h1>

</header>

<div id="newCategory">
  Go to/Create category <input type="text" placeholder="Name of category" autofocus="true" id="newCategoryName" data-category-path="<%= root_path %>" />
</div>

<ul class="suggestionList">
  <li class="suggestion">
    <% @categories_from_suggestions.each do |category| %>
        <div class="category">
          <a href="<%= category_path(category.first) %>">"<span class="name"><%= category.first %></span>"</a>
          (<span class="count"><%= category.second %> suggestions)</span>
        </div>

    <% end %>
  </li>
</ul>


